{
    "name": "hrevert/ht-time-zone",
    "description": "HtTimeZone is a Zend Framework 2 module to simplify working with timezones. This module is useful when your application users are located all around the world.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "zf2",
        "module",
        "timezone",
        "date",
        "datetime"
    ],
    "homepage": "https://github.com/hrevert/HtTimeZone",
    "authors": [
        {
            "name": "Hrevert Technologies",
            "email": "info@hrevert.com"
        },
        {
            "name": "ojhaujjwal",
            "email": "bring2uo@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4",
        "zendframework/zend-modulemanager": "~2.1",
        "zendframework/zend-mvc": "~2.1",
        "zendframework/zend-servicemanager": "~2.1",
        "zendframework/zend-stdlib": "~2.1",
        "zendframework/zend-view": "~2.1"
    },
    "require-dev": {
        "zendframework/zend-filter": "~2.1"
    },
    "suggest": {
        "doctrine/dbal": "If you want to use dbal types provided this module",
        "zendframework/zend-filter": "If you want to use the timezone converter(filters) provided this module"
    },
    "autoload": {
        "psr-0": {
            "HtTimeZone": "src/"
        }
    }
}
